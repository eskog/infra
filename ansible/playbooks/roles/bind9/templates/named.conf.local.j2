key "updatekey" {
    algorithm hmac-sha256;
    secret "{{ TSIG_key }}";
};

zone "{{ domain_name }}". IN {
    type master;
    file "{{ zone_forward_file }}";
    allow-update { key "updatekey"; };
};

zone "0.10.in-addr.arpa". IN {
    type master;
    file "{{ zone_reverse_file }}";
    allow-update { key "updatekey"; };
};
